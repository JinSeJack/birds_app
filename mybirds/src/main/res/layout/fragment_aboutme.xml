<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseAllBackgourndColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
        android:layout_marginRight="@dimen/base_view_marginright_inparent"
        android:layout_marginTop="@dimen/base_menubar_margintop">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/baseAllBackgourndColor"
            android:gravity="center"
            android:orientation="vertical">


            <ScrollView

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.meg7.widget.CustomShapeImageView
                            android:id="@+id/aboutme_csiv_icon"
                            android:layout_width="@dimen/base_bigicon_width"
                            android:layout_height="@dimen/base_bigicon_height"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:scaleType="centerCrop"
                            android:src="@drawable/myimg"
                            app:shape="circle" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:layout_toRightOf="@+id/aboutme_csiv_icon">

                            <TextView
                                android:id="@+id/aboutme_tv_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:text="王呈飞"
                                android:textSize="@dimen/base_content_titletextsize" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/aboutme_tv_username"
                                android:layout_marginTop="@dimen/base_view_margintop">

                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dialog_view_margintop"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/base_dialog_contentpaddingbottom"
                        android:paddingTop="@dimen/base_dialog_contentpaddingbottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="手机号　"
                            android:textSize="@dimen/base_content_contenttextsize" />

                        <TextView
                            android:id="@+id/aboutme_tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="15061113379"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/base_content_contenttextsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dialog_view_margintop"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/base_dialog_contentpaddingbottom"
                        android:paddingTop="@dimen/base_dialog_contentpaddingbottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="性别　　"
                            android:textSize="@dimen/base_content_contenttextsize" />

                        <TextView
                            android:id="@+id/aboutme_tv_sex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="男"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/base_content_contenttextsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dialog_view_margintop"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/base_dialog_contentpaddingbottom"
                        android:paddingRight="@dimen/base_view_marginright"
                        android:paddingTop="@dimen/base_dialog_contentpaddingbottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="出生日期"
                            android:textSize="@dimen/base_content_contenttextsize" />

                        <TextView
                            android:id="@+id/aboutme_tv_birthday"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="2015-08-21 10:28"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/base_content_contenttextsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dialog_view_margintop"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/base_dialog_contentpaddingbottom"
                        android:paddingRight="@dimen/base_view_marginright"
                        android:paddingTop="@dimen/base_dialog_contentpaddingbottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="个性签名"
                            android:textSize="@dimen/base_content_contenttextsize" />

                        <TextView
                            android:id="@+id/aboutme_tv_des"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="好好学习，天天快乐"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/base_content_contenttextsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/base_dialog_view_margintop"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/base_dialog_contentpaddingbottom"
                        android:paddingRight="@dimen/base_view_marginright"
                        android:paddingTop="@dimen/base_dialog_contentpaddingbottom">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="备注　　"
                            android:textSize="@dimen/base_content_contenttextsize" />

                        <TextView
                            android:id="@+id/aboutme_tv_remark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/base_view_marginleft"
                            android:text="程序员"
                            android:textColor="@color/dark"
                            android:textSize="@dimen/base_content_contenttextsize" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>