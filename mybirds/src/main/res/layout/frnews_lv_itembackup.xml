<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6FA"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.meg7.widget.CustomShapeImageView
            android:id="@+id/frlvit_csiv_userpic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mypic"
            app:shape="circle" />

        <TextView
            android:id="@+id/frlvit_tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小明"
            android:textSize="20dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/frlvit_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/frlvit_tv_username"
        android:text="我发现了一直小鸟"
        android:textSize="20dp" />


    <ImageView
    android:id="@+id/frlvit_iv_newsimg"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:src="@drawable/peacock" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/frlvit_tv_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250赞" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/frlvit_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10评论" />
        </RelativeLayout>


        <TextView
            android:id="@+id/frlvit_tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:text="2016-03-13 09:13:13" />

    </LinearLayout>


</LinearLayout>