<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
        android:layout_marginRight="@dimen/base_view_marginright_inparent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_view_height"
            android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
            android:layout_marginRight="@dimen/base_view_marginright_inparent"
            android:background="@color/baseColor">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:text="我要提问"
                android:textColor="@color/white"
                android:textSize="@dimen/base_menubar_titletextsize" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_view_height"
            android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
            android:layout_marginRight="@dimen/base_view_marginright_inparent"
            android:layout_marginTop="@dimen/base_view_margintop"
            android:background="@color/baseItemBackgourndColor">

            <TextView
                android:id="@+id/frmenu_csiv_mypic2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:text="问题：" />

            <EditText
                android:id="@+id/acmenu_fet_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:layout_toRightOf="@+id/frmenu_csiv_mypic2"
                android:background="@null"
                android:textSize="@dimen/base_content_contenttextsize" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_view_height"
            android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
            android:layout_marginRight="@dimen/base_view_marginright_inparent"
            android:layout_marginTop="@dimen/base_view_margintop"
            android:background="@color/baseItemBackgourndColor">


            <TextView
                android:id="@+id/frmenu_csiv_mypic3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:text="内容：" />

            <EditText
                android:id="@+id/acmenu_fet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:layout_toRightOf="@+id/frmenu_csiv_mypic3"
                android:background="@null"
                android:maxLines="3"
                android:textSize="@dimen/base_content_contenttextsize" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_view_height"
            android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
            android:layout_marginRight="@dimen/base_view_marginright_inparent"
            android:layout_marginTop="@dimen/base_view_margintop"
            android:background="@color/baseItemBackgourndColor">


            <TextView
                android:id="@+id/frmenu_csiv_mypic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:text="类型：" />
            <!--最简单的加载下拉数组：entries，内容定义在string-array中-->
            <Spinner
                android:id="@+id/acmenu_fet_content_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:layout_toRightOf="@+id/frmenu_csiv_mypic_type"
                android:entries="@array/type_values" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_view_height"
            android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
            android:layout_marginRight="@dimen/base_view_marginright_inparent"
            android:layout_marginTop="@dimen/base_view_margintop"
            android:background="@color/baseItemBackgourndColor">


            <TextView
                android:id="@+id/frmenu_csiv_mypic4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:text="描述：" />

            <EditText
                android:id="@+id/acmenu_fet_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:layout_toRightOf="@+id/frmenu_csiv_mypic4"
                android:background="@null"
                android:textSize="@dimen/base_content_contenttextsize" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_view_height"
            android:layout_marginLeft="@dimen/base_view_marginleft_inparent"
            android:layout_marginRight="@dimen/base_view_marginright_inparent"
            android:layout_marginTop="@dimen/base_view_margintop"
            android:background="@color/baseItemBackgourndColor">


            <TextView
                android:id="@+id/frmenu_csiv_mypic5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:text="备注：" />

            <EditText
                android:id="@+id/acmenu_et_remark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/base_view_marginleft"
                android:layout_toRightOf="@+id/frmenu_csiv_mypic5"
                android:background="@null"
                android:textSize="@dimen/base_content_contenttextsize" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/acmenu_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/baseColor"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/base_menubar_titletextsize" />

            <Button
                android:id="@+id/acmenu_btn_send"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/baseColor"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/base_menubar_titletextsize" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
