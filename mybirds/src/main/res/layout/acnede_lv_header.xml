<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/aclvhe_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingLeft="10dp"
        android:text=" "
        android:textColor="@color/white"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/aclvhe_tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text=" "
            android:textColor="@color/white"
            android:textSize="10dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/aclvhe_iv_img"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/vulture" />

    <TextView
        android:id="@+id/acnede_tv_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aclvhe_tv_remark"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="2015-10-19"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/aclvhe_tv_sharenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="分享数" />

        <TextView
            android:id="@+id/aclvhe_tv_likenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="点赞数" />

        <TextView
            android:id="@+id/aclvhe_tv_unlikenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="评论数" />

        <TextView
            android:id="@+id/aclvhe_tv_collectnumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="收藏数" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="最新评论：" />

</LinearLayout>
